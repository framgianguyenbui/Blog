<% provide(:title, 'Home') %>
<h1>Recent posts</h1>

<%= will_paginate %>

<ul class="users">
<% @entries.each do |entry| %>
	<%= gravatar_for entry.user %>
	<span class="author"><%= link_to entry.user.name, entry.user %></span>
	<li>
	<span class="title"><%= link_to entry.title, entry %></span>
	<span class="content"><%= entry.content %></span>
	<span class="timestamp"> Posted <%= time_ago_in_words(entry.created_at) %> ago.</span>
	</li>

<% end %>
</ul>

<%= will_paginate %>