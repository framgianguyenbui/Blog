<% provide(:title, @entry.title) %>

<div class="row">
<aside class="span4">
<section>
<h1>
<%= gravatar_for @user %>
<%= @user.name %>
</h1>
</section>
<section>
<%= render 'shared/stats' %>
</section>

</aside>

<blockquote>
<li>
<span class="title"><%= @entry.title %></span>
<span class="content"><%= @entry.content %></span>
<span class="timestamp">
Posted: <%= @entry.created_at %> .
</span>
<% if current_user?(@user) %>
<%= link_to "delete", @entry, method: :delete, confirm: "Are you sure?", title: @entry.title %>
<% end %>
</li>
</blockquote>


</div>
